<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/style_container" >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="@style/style_textview">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:gravity="center"
                style="@style/style_label"
                android:text="Share your gift with your friends!"/>
        <ImageButton
                android:id="@+id/btn_share_facebook"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_share_facebook"
                android:background="#00111111"
                android:layout_gravity="center"
                android:layout_margin="10dp"/>
        <Button
                android:id="@+id/btn_share_google_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Share on G+"
                android:layout_gravity="center"
                android:visibility="gone"/>
        <Button
                android:id="@+id/btn_done_sharing"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:text="Done"
                android:layout_gravity="center"
                style="@style/style_button_round_red"/>
    </LinearLayout>
</FrameLayout>

